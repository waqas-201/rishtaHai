generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  phone        String    @unique // Phone number at the top and unique
  email        String    @unique // Email at the top and unique
  firstName    String
  lastName     String
  day          Int       // Stores day of birth
  month        Int       // Stores month of birth
  year         Int       // Stores year of birth
  address      String
  city         String
  profileFor   ProfileFor // Enum type for profile selection
  gender       Gender     // Enum type for gender selection
  religion     Religion   // Enum type for religion selection
  community    Community  // Enum type for community selection
  country      Country    // Enum type for country selection
}

// Enum definitions based on your schema choices
enum ProfileFor {
  Myself
  MySon
  MyDaughter
  MyBrother
  MySister
  MyFriend
  MyRelative
}

enum Gender {
  Male
  Female
}

enum Religion {
  Christianity
  Islam
  Hinduism
  Buddhism
  Sikhism
}

enum Community {
  CommunityA
  CommunityB
  CommunityC
}

enum Country {
  USA
  Canada
  Pakistan
  India
}


 
