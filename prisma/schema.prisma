// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// prisma/schema.prisma
model User {
  id          Int        @id @default(autoincrement())
  phone       String     @unique
  email       String     @unique
  firstName   String
  lastName    String
  day         Int
  month       Int
  year        Int
  // address     String
  city        City
  profileFor  ProfileFor
  gender      Gender
  religion    Religion
  community   Community
  country     Country
  description String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

enum ProfileFor {
  Myself
  MySon
  MyDaughter
  MyBrother
  MySister
  MyFriend
  MyRelative
}

enum Gender {
  Male
  Female
}

enum Religion {
  Christianity
  Islam
  Hinduism
  Buddhism
  Sikhism
}

enum Community {
  CommunityA
  CommunityB
  CommunityC
}

enum Country {
  USA
  Canada
  Pakistan
  India
}

enum City {
  Karachi
  Lahore
  Islamabad
  Faisalabad
  Rawalpindi
  Multan
  Hyderabad
  Gujranwala
  Peshawar
  Quetta
}