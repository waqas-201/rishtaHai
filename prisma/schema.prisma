// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int        @id @default(autoincrement())
  phone           String     @unique
  email           String     @unique
  firstName       String
  lastName        String
  day             Int
  month           Int
  year            Int
  city            String? 
  profileFor      ProfileFor
  gender          Gender
  religion        Religion
  community       String
  country         String
  state           String?
  description     String
  // familyStatus    FamilyStatus
  maritalStatus   MaritalStatus
  hasChildren     HasChildren
  livesWithYou    LivesWithYou
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
}

enum LivesWithYou {
  Yes
  No
}
 enum HasChildren {
  Yes
  No
}

enum ProfileFor {
  Myself
  MySon
  MyDaughter
  MyBrother
  MySister
  MyFriend
  MyRelative
}

enum Gender {
  Male
  Female
}

enum Religion {
  Islam
  Christianity
  Hinduism
  Buddhism
  Sikhism
}

enum FamilyStatus {
  MIDDLE_CLASS
  UPPER_MIDDLE_CLASS
  UPPER_CLASS
}

enum MaritalStatus {
  UNMARRIED
  WIDOW
}


